    <script>
      const url = 'http://localhost:8992/data';
      
      fetch(url)

       
        .then(res => {

          
          if (!res.ok) {

            
            throw new Error(res.statusText);

          }

          
          return res.json();

        })

        
        .then(data => {

          
          let quejass = data;

          
          let quejasinfo = [];

          
          quejass.forEach(quejas => {

            
            quejasinfo.push([quejas.name, quejas.queja]);

          });

          
          const chart = {
            type: 'bar',
            series: [
              {
                values: quejasinfo
              }
            ]
          };
          
          zingchart.render({
            id: 'chart',
            data: chart,
            height: '100%',
            width: '100%'
          });

        })

         .catch(error => console.log('fetch error'));

    </script>

	
